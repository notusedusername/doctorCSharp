<Window x:Class="DoctorClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:DoctorClient.ViewModels"
        xmlns:local="clr-namespace:DoctorClient.Views"
        mc:Ignorable="d"
        Title="Glorious Doctor Client v1.0" WindowState="Maximized" WindowStyle="SingleBorderWindow">
    <Window.DataContext>
        <viewmodels:DoctorClientViewModel />
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding currentView}"/>
    </Grid>
</Window>
