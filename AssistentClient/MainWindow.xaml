<Window x:Class="AssistentClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:AssistentClient.ViewModels"
        xmlns:local="clr-namespace:AssistentClient" xmlns:interacitivy="http://schemas.microsoft.com/expression/2010/interactivity" 
        mc:Ignorable="d"
        Title="Glorious Assitent Client v1.0"
        Width="1300"
        Height="720"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        MinHeight="680"
        MinWidth="1280">
    <Window.DataContext>
        <viewmodels:AssistentClientViewModel />
    </Window.DataContext>
    <Window.Resources>
    </Window.Resources>
    <Grid >
        <ContentControl Content="{Binding currentView}" />
    </Grid>
</Window>